        android:textSize="20sp"
        android:id="@+id/search2"
        android:text="模糊查询"/>

    <Button
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:textSize="20sp"
      android:id="@+id/search1"
      android:text="单词列表"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:id="@+id/test"
        android:text="其他操作"/>

